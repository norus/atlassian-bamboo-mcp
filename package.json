{
  "name": "bamboo-mcp-server",
  "version": "1.1.3",
  "description": "MCP server for Atlassian Bamboo",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "bamboo-mcp-server": "dist/index.js"
  },
  "scripts": {
